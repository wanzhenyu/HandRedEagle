<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/common_title_container"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:background="@color/actionbar_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/common_title_left"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="12.0dip"
            android:src="@drawable/common_iv_title_back" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/common_title_right"
            android:layout_toRightOf="@+id/common_title_left"
            android:gravity="center" >

            <TextView
                android:id="@+id/common_title_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="民情流水线"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/common_title_right"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5.0dip"
            android:src="@drawable/search" />
    </RelativeLayout>

    <LinearLayout
         android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="3dp" >

        <unicom.hand.redeagle.zhfy.view.ReSpinner
            android:id="@+id/spinner1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/contact_round_corner_bg"
            android:entries="@array/sp1" />

        <unicom.hand.redeagle.zhfy.view.ReSpinner
            android:id="@+id/spinner2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/contact_round_corner_bg"
            android:entries="@array/sp2" />

        <unicom.hand.redeagle.zhfy.view.ReSpinner
            android:id="@+id/spinner3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@drawable/contact_round_corner_bg"
            android:entries="@array/sp3" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>