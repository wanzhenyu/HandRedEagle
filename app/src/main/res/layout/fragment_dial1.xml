<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/common_title_container"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:background="@color/actionbar_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/common_title_left"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="12.0dip"
            android:visibility="gone"
            android:src="@drawable/common_iv_title_back" />

        <TextView
            android:id="@+id/common_title_right"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center_vertical"
            android:padding="5.0dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/common_title_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="拨号"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp"
            android:divider="@color/line"
            android:id="@+id/lv_thjl"
            ></ListView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:gravity="center"
                android:hint="请输入对方号码"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                android:textSize="16sp" />
            <RelativeLayout
                android:id="@+id/iv_call"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/iv_call2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dial"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    android:src="@drawable/ic_topbar_back_normal"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="21dp" />
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/iv_call"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/editText"
                android:background="#bcbcbc"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/number1"
                        style="@style/dtmf_key"
                        android:text="1" />

                    <TextView
                        android:id="@+id/number2"
                        style="@style/dtmf_key"
                        android:text="2" />

                    <TextView
                        android:id="@+id/number3"
                        style="@style/dtmf_key"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/number4"
                        style="@style/dtmf_key"
                        android:text="4" />

                    <TextView
                        android:id="@+id/number5"
                        style="@style/dtmf_key"
                        android:text="5" />

                    <TextView
                        android:id="@+id/number6"
                        style="@style/dtmf_key"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/number7"
                        style="@style/dtmf_key"
                        android:text="7" />

                    <TextView
                        android:id="@+id/number8"
                        style="@style/dtmf_key"
                        android:text="8" />

                    <TextView
                        android:id="@+id/number9"
                        style="@style/dtmf_key"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/dot"
                        style="@style/dtmf_key"
                        android:text="." />

                    <TextView
                        android:id="@+id/number0"
                        style="@style/dtmf_key"
                        android:text="0" />

                    <TextView
                        android:id="@+id/sharp"
                        style="@style/dtmf_key"
                        android:text="#" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>