<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/video_item" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_toLeftOf="@+id/video"
        android:layout_toRightOf="@+id/imageView1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="测试"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/star_1"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:background="@drawable/star"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/star"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/star"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/star"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="27dp"
                android:layout_height="25dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/star"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/arrow_right_normal" />

    <ImageView
        android:id="@+id/video"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/icon_callunable" />

    <ImageView
        android:id="@+id/btn_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
          android:layout_centerVertical="true"
        android:layout_alignTop="@+id/video"
        android:layout_toRightOf="@+id/linearLayout1"
        android:background="@drawable/add_item" />

</RelativeLayout>