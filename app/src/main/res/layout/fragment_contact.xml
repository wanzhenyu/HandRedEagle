<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="unicom.hand.redeagle.zhfy.fragment.ContactFragment">

    <RelativeLayout
        android:id="@+id/common_title_container"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:background="@color/red"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/common_title_left"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="12.0dip"
            android:visibility="invisible"
            android:src="@drawable/common_iv_title_back" />

        <TextView
            android:id="@+id/common_title_right"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="详情"
            android:visibility="invisible"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/common_title_right"
            android:layout_toRightOf="@+id/common_title_left"
            android:gravity="center" >

            <TextView
                android:id="@+id/common_title_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="联系人" />
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/filter_edit"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/acm_inputbox"
        android:hint="请输入查询关键字"
        android:gravity="center"
        android:textSize="15sp" />
    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ea_lv"
        >


    </ExpandableListView>






</LinearLayout>
