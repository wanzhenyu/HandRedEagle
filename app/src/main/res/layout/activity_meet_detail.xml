<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0EFF4"
    tools:context="unicom.hand.redeagle.zhfy.ui.MeetDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/red"
        android:layout_height="49dp">

        <ImageView
            android:id="@+id/common_title_left"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="12.0dip"
            android:src="@drawable/common_iv_title_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="详情"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="高级会控"
            android:id="@+id/tv_bj"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@color/white"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:id="@+id/tv_subject"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="时间"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text=""
                    android:textColor="#888580"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/tv_time"
                    android:background="@color/white"
                    android:enabled="false"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginLeft="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="会议号码"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text=""
                    android:textColor="#888580"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/tv_number"
                    android:background="@color/white"
                    android:enabled="false"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginLeft="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="密码"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text=""
                    android:textColor="#888580"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/tv_psd"
                    />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginLeft="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="组织者"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text=""
                    android:textColor="#888580"
                    android:textSize="15sp"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:paddingLeft="15dp"
                    android:id="@+id/tv_organizer"
                    android:background="@color/white"
                    android:enabled="false"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginLeft="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="参会者"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#888580"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:id="@+id/tv_jb_lecture"
                    android:background="@color/white"
                    android:enabled="false"
                    android:cursorVisible="true"
                    android:visibility="gone"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    />


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0"
                android:layout_marginLeft="15dp"
                />
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/fl_yc"
                zhy:max_select="-1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp">
            </com.zhy.view.flowlayout.TagFlowLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
