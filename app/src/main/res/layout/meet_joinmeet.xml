<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#F0EFF4"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:background="@color/red"
        >
        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="20dp"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/red"
            android:layout_height="49dp">

            <ImageView
                android:id="@+id/common_title_left"
                android:layout_width="64dip"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:gravity="center"
                android:padding="12.0dip"
                android:src="@drawable/common_iv_title_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:text="加入会议"
                android:id="@+id/tv_title"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        >
    <EditText
        android:id="@+id/meet_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:digits="0123456789"
        android:hint="会议Id"
        android:maxLength="10"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="15dp"
            />

    <EditText
        android:id="@+id/meet_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="会议密码"
        android:maxLength="10"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:inputType="number"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="15dp"
            />
    <EditText
        android:id="@+id/meet_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="您在会议中的名称(选填)"
        android:background="@color/white"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
         />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_marginLeft="15dp"
            />
    <Spinner
        android:id="@+id/meet_server_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:entries="@array/meet_server_type">

    </Spinner>
    <EditText
        android:id="@+id/meet_server_addr"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:hint="会议服务器地址" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <CheckBox
            android:id="@+id/meet_camera_ckb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启摄像头"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <CheckBox
            android:id="@+id/meet_mic_ckb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开启麦克风"
            />
    </LinearLayout>

    <Button
        android:id="@+id/meet_join_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="加入会议"
        android:background="@color/white"
        android:textColor="#F23023"
        android:textSize="16sp"
        />
    </LinearLayout>
</LinearLayout>