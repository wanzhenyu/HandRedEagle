<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:background="@color/transparent"
    android:orientation="vertical" >
    <LinearLayout

        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <!--<View-->
            <!--android:id="@+id/view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="69dp"-->

            <!--/>-->

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#bcbcbc"-->
            <!--/>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="#ffffff"
                android:gravity="center"
                android:hint="请输入对方号码"
                android:singleLine="true"
                android:textColor="#4d4d4d"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/iv_del"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_marginRight="15dp"
                android:padding="5dp"
                android:src="@mipmap/del"
                 />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            >

            <RelativeLayout
                android:id="@+id/iv_call"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/iv_call2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/view_call"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/video_dowm"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="16dp"
                    />
                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/video_vic"
                    android:layout_alignTop="@+id/iv_call2"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/iv_call"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#bcbcbc"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/number1"
                        style="@style/dtmf_key"
                        android:text="1" />

                    <TextView
                        android:id="@+id/number2"
                        style="@style/dtmf_key"
                        android:text="2" />

                    <TextView
                        android:id="@+id/number3"
                        style="@style/dtmf_key"
                        android:text="3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/number4"
                        style="@style/dtmf_key"
                        android:text="4" />

                    <TextView
                        android:id="@+id/number5"
                        style="@style/dtmf_key"
                        android:text="5" />

                    <TextView
                        android:id="@+id/number6"
                        style="@style/dtmf_key"
                        android:text="6" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/number7"
                        style="@style/dtmf_key"
                        android:text="7" />

                    <TextView
                        android:id="@+id/number8"
                        style="@style/dtmf_key"
                        android:text="8" />

                    <TextView
                        android:id="@+id/number9"
                        style="@style/dtmf_key"
                        android:text="9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/dot"
                        style="@style/dtmf_key"
                        android:text="*" />

                    <TextView
                        android:id="@+id/number0"
                        style="@style/dtmf_key"
                        android:text="0" />

                    <TextView
                        android:id="@+id/sharp"
                        style="@style/dtmf_key"
                        android:text="#" />
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
