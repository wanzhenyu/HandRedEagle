<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/common_title_container"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_weight="0"
        android:background="@color/actionbar_color"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/common_title_left"
            android:layout_width="64dip"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="12.0dip"
            android:src="@drawable/common_iv_title_back" />

        <TextView
            android:id="@+id/common_title_right"
            android:layout_width="60dip"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="5.0dip"
            android:singleLine="true"
            android:text="存储"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/common_title_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="服务器设置"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="SERVER(服务器地址)"
        android:layout_margin="5dp"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/ip1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_white_nostroke"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:hint="pds10.com"
        android:paddingLeft="10dp" >
    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="OUTBOUNDSERVER(代理服务器地址)"
        android:layout_margin="5dp"
        android:textSize="18sp"/>
    <EditText
        android:id="@+id/ip2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_white_nostroke"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:hint="202.110.98.2"
        android:paddingLeft="10dp" >
    </EditText>
</LinearLayout>